<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

    <session-factory>

        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:mem:sale;sql.enforce_size=false</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <!--<property name="format_sql">true</property>-->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="ru/job4j/model/entity/BodyType.hbm.xml"/>
        <mapping resource="ru/job4j/model/entity/Item.hbm.xml"/>
        <mapping resource="ru/job4j/model/entity/Mark.hbm.xml"/>
        <mapping resource="ru/job4j/model/entity/Model.hbm.xml"/>
        <mapping resource="ru/job4j/model/entity/User.hbm.xml"/>

    </session-factory>

</hibernate-configuration>